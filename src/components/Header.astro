---
import { business } from "../config/site";
---
<header class="sticky top-0 z-40 bg-white/80 backdrop-blur border-b border-gray-100">
  <div class="wrap flex h-14 items-center justify-between">
    <a href="/" class="font-semibold tracking-wide text-[var(--color-primary)]">
      {business.name}
    </a>

    <nav class="hidden md:flex gap-6 text-sm font-medium text-gray-700">
      <a href="#story" class="hover:text-[var(--color-primary)] transition-colors">Our Story</a>
      <a href="#menu" class="hover:text-[var(--color-primary)] transition-colors">Menu</a>
      <a href="#hours" class="hover:text-[var(--color-primary)] transition-colors">Hours</a>
      <a href="#contact" class="hover:text-[var(--color-primary)] transition-colors">Contact</a>
    </nav>
  </div>
</header>
