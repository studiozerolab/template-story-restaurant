  <MenuItemsGrid
    title="Menu Highlights"
    categories={menu.categories}
    id="menu"
  />

  <!-- 6. Gallery -->
  <!-- {toggles.showGallery && <GalleryGrid images={assets.gallery} />} -->

  <!-- 7. Contact -->
  <!-- <ContactForm /> -->

  <Fragment slot="footer"><Footer /></Fragment>

